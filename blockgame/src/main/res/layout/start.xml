<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Start"
    android:background="@drawable/playbg"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:background="#aaffffff"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="normal|bold">

        </TextView>

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="점수"
            android:background="#aaffffff"
            android:textStyle="normal|bold"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large">

        </TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivBlock1"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"

            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock2"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock3"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock4"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock5"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock6"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock7"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>
        <ImageView
            android:id="@+id/ivBlock8"
            android:layout_width="106dp"
            android:layout_height="116dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/block_blue">
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/ivRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"

            android:onClick="onClick"
            android:src="@drawable/btn_red">

        </ImageView>

        <ImageView
            android:id="@+id/ivGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"

            android:onClick="onClick"
            android:src="@drawable/btn_green">

        </ImageView>

        <ImageView
            android:id="@+id/ivBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/btn_blue">

        </ImageView>


    </LinearLayout>
</LinearLayout>